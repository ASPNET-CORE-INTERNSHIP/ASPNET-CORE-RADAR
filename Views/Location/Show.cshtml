@model ASPNETAOP.Models.Location

@{
    ViewData["Title"] = "Location's Informations";
}

<h1>Location's Informations</h1>

<hr />
<div class="row">
    <div class="col-md-9">
        <form asp-action="Show">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @{
                var ID = "Model.ID";
                var name = "Model.name";
                var country = "Model.country";
                var city = "Model.city";
                var geographic_latitude = "Model.geographic_latitude";
                var geographic_longitude = "Model.geographic_longitude";
                var airborne = "Model.airborne";
                <input type="hidden" id="@ID" name="@ID" value="@Model.ID" />
                <input type="hidden" id="@name" name="@name" value="@Model.name" />
                <input type="hidden" id="@country" name="@country" value="@Model.country" />
                <input type="hidden" id="@city" name="@city" value="@Model.city" />
                <input type="hidden" id="@geographic_latitude" name="@geographic_latitude" value="@Model.geographic_latitude" />
                <input type="hidden" id="@geographic_longitude" name="@geographic_longitude" value="@Model.geographic_longitude" />
                <input type="hidden" id="@airborne" name="@airborne" value="@Model.airborne" />
                <input asp-for="ID" class="hidden" type="hidden">
                <h1>---------------------------------------------------------------------</h1>
                <table>
                    <tr>
                        <th>Name:</th>
                        <th>@Model.name</th>
                    </tr>
                    <tr>
                        <th>Country:</th>
                        <th>@Model.country</th>
                    </tr>
                    <tr>
                        <th>City:</th>
                        <th>@Model.city</th>
                    </tr>
                    <tr>
                        <th>Geographic Latitude:</th>
                        <th>@Model.geographic_latitude</th>
                    </tr>
                    <tr>
                        <th>Geographic Longitude:</th>
                        <th>@Model.geographic_longitude</th>
                    </tr>
                    <tr>
                        <th>Airborne:</th>
                        <th>@Model.airborne</th>
                    </tr>
                </table>
                <h1>---------------------------------------------------------------------</h1>           
            }
        </form>
    </div>
</div>
<b>@ViewData["Message"]</b>
<div>
    <input type="button" style="background-color:mediumblue; border-color:mediumblue; color:white; width:150px; height:40px;" title="Go Back" value="Go Back" onclick="location.href='@Url.Action("GoBackToRadar", "Location", new { id = Model.ID })'" />
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}