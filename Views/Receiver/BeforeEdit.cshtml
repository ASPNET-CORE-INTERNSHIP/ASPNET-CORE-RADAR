@model ASPNETAOP.Models.Receiver

@{
    ViewData["Title"] = "Edit Receiver";
}

<h1>Edit Receiver</h1>

<hr />
<div class="row">
    <div class="col-md-9">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @{
                var ID = "Model.ID";
                var name = "Model.name";
                var listening_time = "Model.listening_time";
                var rest_time = "Model.rest_time";
                var recovery_time = "Model.recovery_time";
                <input type="hidden" id="@ID" name="@ID" value="@Model.ID" />
                <input type="hidden" id="@name" name="@name" value="@Model.name" />
                <input type="hidden" id="@listening_time" name="@listening_time" value="@Model.listening_time" />
                <input type="hidden" id="@rest_time" name="@rest_time" value="@Model.rest_time" />
                <input type="hidden" id="@recovery_time" name="@recovery_time" value="@Model.recovery_time" />
                <div class="form-group">
                    <label asp-for="ID" class="hidden"></label>
                    <input asp-for="ID" class="hidden" type="hidden">
                    <span asp-validation-for="ID" class="hidden"></span>
                </div>
                <div class="form-group">
                    <label asp-for="name" class="control-label"></label>
                    <input asp-for="name" class="form-control" type="text" placeholder=@Model.name/>
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="listening_time" class="control-label"></label>
                    <input asp-for="listening_time" class="form-control" type="number" placeholder=@Model.listening_time step="0.01"/>
                    <span asp-validation-for="listening_time" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="rest_time" class="control-label"></label>
                    <input asp-for="rest_time" class="form-control" type="number" placeholder=@Model.rest_time step="0.01"/>
                    <span asp-validation-for="rest_time" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="recovery_time" class="control-label"></label>
                    <input asp-for="recovery_time" class="form-control" type="number" placeholder=@Model.recovery_time step="0.01"/>
                    <span asp-validation-for="recovery_time" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
            <b>@Data.message</b>
            @{ Data.message = null; }
        </form>
    </div>
</div>

<div>
    <input type="button" style="background-color:mediumblue; border-color:mediumblue; color:white; width:150px; height:40px;" title="Go Back" value="Go Back" onclick="location.href='@Url.Action("GoBack", "Receiver", new { id = Model.ID })'" />
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}