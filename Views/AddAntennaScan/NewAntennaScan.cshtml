@model ASPNETAOP.Models.AddAntennaScan

@{
    ViewData["Title"] = "NewAntennaScan";
}

<h1>Build Relationship</h1>

<hr />
<div class="row">
    <div class="col-md-9">
        <form asp-action="NewAntennaScan">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                @foreach (AddAntenna antenna in ViewBag.antennas)
                {
                    <div>@antenna.name</div>
                    <div>@antenna.duty</div>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
            <b>@ViewData["Message"]</b>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Turn back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
